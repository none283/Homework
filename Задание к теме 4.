#include <iostream>
#include <math.h>
using namespace std;

int main()
{
	double a, b;
	cout << "1." << endl;
	cout << "a = ";
	cin >> a;
	cout << "b = ";
	cin >> b;
	cout << "S = a * b = " << a * b << endl;
	cout << "P = 2 * (a + b) = " << 2 * (a + b) << endl << endl;

	double d;
	cout << "2." << endl;
	cout << "d = ";
	cin >> d;
	cout << "L = pi * d = " << 3.14f * d << endl << endl;

	cout << "3." << endl;
	cout << "a = ";
	cin >> a;
	cout << "b = ";
	cin >> b;
	cout << "(a + b) / 2 = " << (a + b) / 2 << endl << endl;

	cout << "4." << endl;
	cout << "a = ";
	cin >> a;
	cout << "b = ";
	cin >> b;
	cout << "a^2 + b^2 = " << pow(a, 2) + pow(b, 2) << endl;
	cout << "a^2 - b^2 = " << pow(a, 2) - pow(b, 2) << endl;
	cout << "a^2 * b^2 = " << pow(a, 2) * pow(b, 2) << endl;
	cout << "a^2 / b^2 = " << pow(a, 2) / pow(b, 2) << endl << endl;

	cout << "5." << endl;
	cout << "a = ";
	cin >> a;
	cout << "b = ";
	cin >> b;
	cout << "|a| + |b| = " << abs(a) + abs(b) << endl;
	cout << "|a| - |b| = " << abs(a) - abs(b) << endl;
	cout << "|a| * |b| = " << abs(a) * abs(b) << endl;
	cout << "|a| / |b| = " << abs(a) / abs(b) << endl;
}
